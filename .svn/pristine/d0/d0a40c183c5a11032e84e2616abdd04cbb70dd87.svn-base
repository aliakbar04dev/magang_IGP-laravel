          allowEnterKey: true,
          reverseButtons: false,
          focusCancel: false,
        }).then(function () {
        document.getElementById("tanggal_text").value = tanggal.split('-').join('/');
        $.ajax({
        url: "{{ route('mobiles.itelatsubmit') }}",
        type: 'post',
        cache: false,
        dataType: 'json',
        data: $('#form_id').serialize(), // Remember that you need to have your csrf token included
