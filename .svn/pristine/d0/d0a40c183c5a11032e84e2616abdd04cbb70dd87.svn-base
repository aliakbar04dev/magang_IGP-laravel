            console.log(_response);
            $('#tambahpengajuan').show();
            $('.collapse').collapse('hide');
            refreshTable.click();
        },
        error: function( _response ){
          swal(
            'Terjadi kesalahan',
            'Segera hubungi Admin!',
            'error'
            )
        }
    });
        }, function (dismiss) {
