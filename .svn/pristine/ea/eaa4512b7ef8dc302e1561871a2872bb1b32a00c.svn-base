					url: '{{ route('persetujuancuti.edit') }}',
					data: isi,
					dataType: "json",
					success: function(data) {
					if(data['pesan'] == 'Sukses'){
						swal({
							title: "Cuti Berhasil Disetujui",
							text: data['msg'],
							type: "success"
						}).then(function() {
							tampil()
						});
					}else{
						swal('Warning!', 'Gagal!', 'error');
					}
					
					},
					error: function(error) {
						swal('Warning!', 'Gagal!', 'error');
						}
					});
				
			}, function(dismiss) { 
				if (dismiss === 'cancel') {
					swal('Cancelled', 'Dibatalkan', 'error');
				}
			}) 
		}


		function Decline(no_cuti)
