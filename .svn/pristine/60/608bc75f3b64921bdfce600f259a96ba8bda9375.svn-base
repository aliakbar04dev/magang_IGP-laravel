    public function picaRejects() {
        $lists = DB::table("pica_rejects")
        ->select(DB::raw("*"))
        ->where("no_pica", $this->no_pica)
        ->orderBy("no_revisi", "desc");
        return $lists;
    }

    public function nama($username)
